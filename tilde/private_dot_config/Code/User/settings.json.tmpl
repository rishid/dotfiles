{
  // UI / Editor experience
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code, Menlo, monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true
  },
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,

  // Terminal
  "terminal.integrated.fontFamily": "Menlo, monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "paste",
{{- if eq .chezmoi.os "linux" }}
  "terminal.integrated.defaultProfile.linux": "zsh",
{{- else if eq .chezmoi.os "darwin" }}
  "terminal.integrated.defaultProfile.osx": "zsh",
{{- end }}

  // Window
  "window.closeWhenEmpty": false,

  // Python
  "python.pythonPath": "python3",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.envFile": "${workspaceFolder}/.env",

  // Go
  "go.useLanguageServer": true,
  "go.formatTool": "gopls",
  "gopls": {
    "staticcheck": true,
    "completeUnimported": true,
    "analyses": {
      "unusedparams": true,
      "shadow": true
    }
  },
  "go.lintTool": "golangci-lint",
  "go.testOnSave": true,
  "go.coverOnSave": false,
  "go.buildOnSave": "package",
  "go.vetOnSave": "package",

  // Auto-save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Git
  "git.confirmSync": false,

  // Platform compatibility
  "files.eol": "\n",

  // Misc
  "explorer.confirmDelete": false,
  "breadcrumbs.enabled": true,

  // Remote SSH platforms & agent forwarding
  "remote.SSH.remotePlatform": {
    "linux-vm": "linux",
    "server": "linux"
  },
  "remote.SSH.enableAgentForwarding": true,

  // GitHub Copilot experimental suggestion feature
  "github.copilot.nextEditSuggestions.enabled": true,

  // Language specific settings
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // Terminal auto approvals (chat tools integration)
  "chat.tools.terminal.autoApprove": {
    ".venv/bin/pytest": true,
    "task": true,
    "env PYTHONPATH=src uv run pydocstyle --convention=google src || true": {
      "approve": true,
      "matchCommandLine": true
    },
    "python": true,
    "kubectl logs": true,
    "kubectl get": true,
    "kubectl describe": true,
    "openssl": true,
    "export": true,
    "jq": true,
    "base64": true
  },

  // Kubernetes extension configuration
  "vs-kubernetes": {
    "vs-kubernetes.knownKubeconfigs": [
      "/home/rdhupar/w/mcp/mcp-server-terraform/.kubeconfig"
    ],
    "vs-kubernetes.kubeconfig": "/home/rdhupar/w/mcp/mcp-server-terraform/.kubeconfig"
  }
}
