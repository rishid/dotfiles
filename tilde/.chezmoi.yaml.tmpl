# chezmoi:template:missing-key=invalid
---
sourceDir: "{{ .chezmoi.sourceDir }}"
verbose: true
follow: true
format: yaml
color: auto
template:
  options:
    - missingkey=zero
git:
  autoAdd: true
  autoCommit: true
  autoPush: true

# The following variables are only available within this TOML template file
{{/* boolean feature tags */}}

{{- $chezmoiForce := or (has "--force" .chezmoi.args) (has "--force=true" .chezmoi.args) -}}
{{- $interactive := and stdinIsATTY (not $chezmoiForce) -}}

{{- $docker := false -}}{{/* true if this machine should have Docker installed */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $headlessx := or (env "SSH_CLIENT" | not | not) (not (or (env "DISPLAY") (env "WAYLAND_DISPLAY"))) -}}
{{- $devcontainer := or (env "REMOTE_CONTAINERS") (env "CODESPACES") (env "VSCODE_REMOTE_CONTAINERS_SESSION") (env "GITPOD_HOST") | not | not -}}
{{- $minimum := or $devcontainer -}}

{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- $work := false -}}{{/* true if this machine is work-related */}}

{{- "" -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "SSH_CLIENT" | not | not) (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "Dhupar's MacBook Air" -}}
{{-     $hostname = "dhupars-mba" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}

{{- if not $ephemeral -}}
{{-   if eq $hostname "bos-lhv9i4" -}}
{{-     $docker = true -}}
{{-     $work = true -}}
{{-   else if eq $hostname "vault" -}}
{{-     $headless = true -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "dhupars-mba" -}}
{{-     $personal = true -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-     if not $ephemeral -}}
{{-       $docker = promptBoolOnce . "docker" "docker" -}}
{{-     end -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

# Here we "export" the variables, so we can access them outside this file
data:
  email: "rishid@gmail.com"
  editor: "code --wait"
  
  docker: {{ $docker }}
  ephemeral: {{ $ephemeral }}
  headless: {{ $headless }}

  hostname: {{ $hostname | quote }}
  osid: {{ $osID | quote }}
  {{- if eq .chezmoi.os "linux" }}
  uname:
    machine: "{{ output "uname" "-m" | trim }}"
{{- end }}

  personal: {{ $personal }}  
  work: {{ $work }}
