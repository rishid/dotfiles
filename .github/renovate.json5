{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  // General RenovateBot configuration
  extends: [
    "github>rishid/renovate-config:default.json5",
  ],
  platform: "github",
  packageRules: [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance"],
      "automerge": true
    }
  ],
  "regexManagers": [
    // Workaround to support github backend in mise config.toml
    {
      "fileMatch": ["config\\.toml$"],
      "matchStrings": ["(?m)^\"github:(?<packageName>[^\"]+)\"\\s*=\\s*\"(?<currentValue>[0-9.]+)\""],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{{packageName}}}"
    }
  ],
  onboarding: false,
  requireConfig: "ignored",
}
