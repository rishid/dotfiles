{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>rishid/renovate-config:default.json5',
  ],
  platform: 'github',
  mise: {
    managerFilePatterns: [
      '/(^|/)config\\.toml\\.tmpl$/',
      '/(^|/)mise\\.toml\\.tmpl$/',
    ],
  },
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
        'lockFileMaintenance',
      ],
      automerge: true,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/config\\.toml(\\.tmpl)?$/',
      ],
      matchStrings: [
        '(?m)^s*"github:(?<depName>[^"]+)"s*=s*"v?(?<currentValue>[0-9.]+)"',
      ],
      datasourceTemplate: 'github-releases',
      versioningTemplate: 'semver-coerced',
      prCreation: 'immediate',
    },
  ],
  onboarding: false,
  requireConfig: 'ignored',
}
