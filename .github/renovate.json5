{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>rishid/renovate-config:default.json5',
  ],
  platform: 'github',
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
        'lockFileMaintenance',
      ],
      automerge: true,
    },
  ],
  customManagers: [
    // Workaround to support github backend in mise config.toml
    {
      customType: 'regex',
      managerFilePatterns: [
        '/config\\.toml$/',
      ],
      matchStrings: [
        '(?m)^"github:(?<depName>[^"]+)"\\s*=\\s*"(?<currentValue>[0-9.]+)"',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: '{{{packageName}}}',
      versioningTemplate: 'semver-coerced',
      prCreation: 'immediate',
    },
  ],
  onboarding: false,
  requireConfig: 'ignored',
}
